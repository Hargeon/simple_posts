<!DOCTYPE html>
<html>
  <head>
    <title>SimplePosts</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <% if user_signed_in? %>
          <h3 class="my-0 mr-md-auto font-weight-normal"><%= current_user.email %></h3>
          <span class="btn"><%= link_to  "Users", users_path %></span>
          <span class="btn"><%= link_to  "Posts", posts_path %></span>
          <span class="btn"><%= link_to  "New Post", new_post_path %></span>
          <span class="btn btn-outline-primary" ><%= link_to  'Log out', destroy_user_session_path, method: :delete %></span>
        <% else %>
          <span class="btn btn-outline-primary" ><%= link_to  "Sign in", new_user_session_path %></span>
          <span class="btn btn-outline-primary" ><%= link_to  "Sign up", new_user_registration_path %></span>
        <% end %>
        </div>
      <div class="container">
        <%= yield %>
      </div>
  </body>
</html>
